# Payment Microservice Environment Variables

# Server Configuration
HOST=0.0.0.0
PORT=8003
DEBUG=true
ENVIRONMENT=development

# Database (shared with mesa-ya-res or separate)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/mesaya_db

# Payment Provider Configuration
PAYMENT_PROVIDER=mock  # Options: stripe, mercadopago, mock

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# MercadoPago Configuration (optional)
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key

# Mock Provider Secret (for development webhooks)
MOCK_WEBHOOK_SECRET=whsec_mock_development_secret

# Partner Webhooks (B2B)
PARTNER_WEBHOOK_TIMEOUT=10
PARTNER_MAX_RETRIES=3

# URLs
FRONTEND_URL=http://localhost:4200
SUCCESS_URL=http://localhost:4200/payment/success
CANCEL_URL=http://localhost:4200/payment/cancel

# Internal Services
MESA_YA_RES_URL=http://localhost:3000
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# Security
JWT_SECRET=your_jwt_secret_for_internal_auth
HMAC_SECRET_PREFIX=whsec_

# CORS
CORS_ORIGINS=["http://localhost:4200", "http://localhost:3000"]
